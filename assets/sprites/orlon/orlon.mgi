SCRIPT_ANIM_OrlonRing_MakeRing::
    SpriteDraw() {
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_01)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_03)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_04)
        MoveDraw(32, 0, 0, SPRITE_OrlonRing_05)
        MoveDraw(16, 0, 0, SPRITE_OrlonRing_06)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_07)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_08)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_09)
    }
    SetScriptScroll(SCRIPT_ANIM_OrlonRing_ScreenShake)
    SpriteDraw() {
        MoveDraw(16, 0, 0, SPRITE_OrlonRing_10)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_08)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_09)
    }
    SetScriptScroll(SCRIPT_ANIM_OrlonRing_ScreenShake)
    SpriteDraw() {
        MoveDraw(16, 0, 0, SPRITE_OrlonRing_10)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_08)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_09)
    }
    SetScriptScroll(SCRIPT_ANIM_OrlonRing_ScreenShake)
    SpriteDraw() {
        MoveDraw(16, 0, 0, SPRITE_OrlonRing_10)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_08)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_07)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_06)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_05)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_04)
        MoveDraw(8, 0, 0, SPRITE_OrlonRing_03)
        MoveDraw(4, 0, 0, SPRITE_OrlonRing_01)
    }
    .Loop::
        SpriteDraw() {
            MoveDraw(255, 0, 0, SPRITE_OrlonRing_02)
        }
        Jump(.Loop)


    ScrollMap() {
        Move(1, 0, 2)
        Move(1, 0, -3)
        Move(1, 0, 3)
        Move(1, 0, -3)
        Move(1, 0, 3)
        Move(1, 0, -2)
        Move(1, 0, 2)
        Move(1, 0, -2)
        Move(1, 0, 2)
        Move(1, 0, -2)
        Move(1, 0, 1)
        Move(1, 0, -1)
        Move(1, 0, 1)
        Move(1, 0, -1)
        Move(1, 0, 1)
        Move(1, 0, -1)
        Move(1, 0, 1)
        Move(1, 0, -1)
    }
    End()

SCRIPT_ANIM_Orlon_FaceHero::
    Switch(#DIRECTION#) {
        Case(Actor_FLAGS_FACENORTH, .FaceUp)
        Case(Actor_FLAGS_FACESOUTH, .FaceDown)
        Case(Actor_FLAGS_FACEEAST, .FaceRight)
        Case(Actor_FLAGS_FACEWEST, .FaceLeft)
    }
    .FaceUp:
        ThisSetAnimSingle(SCRIPT_ANIM_Orlon_FaceUp)
        WaitEventText(1)
        RestoreActorState()
    .FaceDown:
        ThisSetAnimSingle(SCRIPT_ANIM_Orlon_FaceDown)
        WaitEventText(1)
        RestoreActorState()
    .FaceLeft:
        ThisSetAnimSingle(SCRIPT_ANIM_Orlon_FaceLeft)
        WaitEventText(1)
        RestoreActorState()
    .FaceRight:
        ThisSetAnimSingle(SCRIPT_ANIM_Orlon_FaceRight)
        WaitEventText(1)
        RestoreActorState()
        MoveDraw(4, 0, 0, SPRITE_ValkanSpear_SpearLeft1)
    }
    .Loop:
        SpriteDraw() {
            MoveDraw(1, -2, 0, SPRITE_ValkanSpear_SpearLeft2)
        }
        Jump(.Loop)

